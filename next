#!/usr/bin/env bash

function tree_clean() {
    git diff --quiet
}

function index_clean() {
    git diff --cached --quiet
}

next_branch='11.multi-region-replication'

tree_clean || { git commit -am "Save changes" ; } &&
    index_clean || { git commit -am "Save changes" ; } &&
    docker compose stop &&
    docker compose rm -f &&
    git checkout "${next_branch}"
